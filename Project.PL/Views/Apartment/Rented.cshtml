@model IEnumerable<Project.DAL.Entities.Apartment>


@{
    ViewData["Title"] = " Rented Apartments ";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}




<div class="container">

    <div id="content" class="p-4 p-md-5 pt-5">
        <div class="content-wrapper">
            <!-- Content Header (Page header) ------>
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#" class="text-secondary">Home</a></li>
                                <li class="breadcrumb-item active"> Rented Apartments</li>
                            </ol>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>


            <!-- Main content -->
            <section class="content mb-3">

                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Rented Apartments</h3>
                    </div>
                    <div class="card-body p-0">
                        @if (Model?.Count() > 0)
                        {
                            <table class="table table-striped projects">
                                <thead>
                                    <tr>
                                        <th style="width: 10%">
                                            @Html.DisplayNameFor(M => M.ApartmentId)
                                        </th>
                                        <th style="width: 20%">
                                            @Html.DisplayNameFor(M => M.ApartName)
                                        </th>

                                        <th style="width: 30%">
                                            @Html.DisplayNameFor(M => M.FoolrId)
                                        </th>

                                        <th style="width: 30%">
                                            @Html.DisplayNameFor(M => M.Area)
                                        </th>

                                        <th style="width: 30%">
                                            @Html.DisplayNameFor(M => M.ApartmentStatus)
                                        </th>



                                        <th style="width: 30%">
                                            @Html.DisplayNameFor(M => M.Discription)
                                        </th>

                                        <th>

                                        </th>
                                        <th style="width: 8%" class="text-center">
                                        </th>
                                        <th style="width: 28%">
                                        </th>
                                    </tr>
                                </thead>


                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @item.ApartmentId
                                            </td>
                                            <td>
                                                @item.ApartName
                                            </td>

                                            <td>
                                                @item.FoolrId
                                            </td>
                                            <td>
                                                @item.Area
                                            </td>

                                            <td>
                                                @item.ApartmentStatus
                                            </td>



                                            <td>
                                                @item.Discription
                                            </td>

                                            <td class="project_progress">
                                            </td>
                                            <td class="project-state">
                                            </td>
                                            <td class="project-actions text-right">
                                                <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.ApartmentId">
                                                    <i class="fas fa-folder">
                                                    </i>
                                                    View
                                                </a>
                                                <a class="btn btn-info btn-sm" asp-action="Update" asp-route-id="@item.ApartmentId">
                                                    <i class="fas fa-pencil-alt">
                                                    </i>
                                                    Edit
                                                </a>
                                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ApartmentId">
                                                    <i class="fas fa-trash">
                                                    </i>
                                                    Delete
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <br />
                            <div class="alert alert-warning">
                                <h4>No Apartments Found!!</h4>
                            </div>
                        }
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </section>
            <div class="row">
                <br />
                <div class="col-12">
                    <a asp-action="Create" class="btn btn-success float-right">Add Apartment</a>
                </div>
            </div>
            <!-- /.content -->
        </div>
    </div>
</div>


