@model Renter
@{
    var Apartments = new SelectList(ViewBag.Apartments, "ApartmentId", "ApartmentName");
   
}

<div class="card-body p-0">
    <div class="card card-primary">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="@Model.Id"> ID</label>
                <input type="text" asp-for="@Model.Id" class="form-control">
                <span asp-validation-for="@Model.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Name"> Name</label>
                <input type="text" asp-for="@Model.Name" class="form-control">
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Email"> Email</label>
                <input asp-for="@Model.Email" class="form-control" rows="4"></input>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.RentStatus">RentStatus</label>

                <select asp-for="@Model.ApartmentId" asp-items="@Html.GetEnumSelectList<RentStatusEnum>()" class="form-control">
                    <option>--- Not set ---</option>
                </select>
                <span asp-validation-for="@Model.RentStatus" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="@Model.ApartmentId">Apartment</label>
                <select asp-for="@Model.ApartmentId" asp-items="Apartments" class="form-control">
                    <option>--- Select Apartment ---</option>
                </select>                
                <span asp-validation-for="@Model.ApartmentId" class="text-danger"></span>
            </div>
        </div>
        <!-- /.card-body -->
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
