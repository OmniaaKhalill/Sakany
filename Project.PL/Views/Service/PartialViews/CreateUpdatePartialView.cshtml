@model Service


<div class="card-body p-0">
    <div class="card card-primary">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="@Model.ServiceId"> ID</label>
                <input type="text" asp-for="@Model.ServiceId" class="form-control">
                <span asp-validation-for="@Model.ServiceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ServiceName"> Name</label>
                <input type="text" asp-for="@Model.ServiceName" class="form-control">
                <span asp-validation-for="@Model.ServiceName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Cost"> Cost</label>
                <input type="number" asp-for="@Model.Cost" class="form-control" rows="4"></input>
                <span asp-validation-for="@Model.Cost" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Description">Discription</label>
                <textarea asp-for="@Model.Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>


        </div>
        <!-- /.card-body -->
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

